                    def workspace = WORKSPACE
                    echo "Current workspace is $WORKSPACE"
                    echo 'Workspace cleaned and ready for use.'

                    withEnv(["PROYECT_PATH=$WORKSPACE\\$PROYECT_NAME"]) {
                        echo "El PROYECT_PATH es igual a $PROYECT_PATH"
